{{> not-working}}
{{#if errors}}
    {{{dump errors}}}
{{/if}}
<form class="form-register" role="form" method="post">
  <h2 class="form-register-heading">Register</h2>

  <div class="form-group{{#if errors.username}} has-error{{/if}}">
    <div class="controls">
      <input type="text" class="form-control" placeholder="Username" name="username" required autofocus value="{{errors.username.value}}">
        {{#if errors.username}}<span class="help-inline">{{errors.username.msg}}</span>{{/if}}
    </div>
  </div>

  <div class="form-group{{#if errors.email}} has-error{{/if}}">
    <div class="controls">
      <input type="text" class="form-control" placeholder="Email address" name="email" required autofocus value="{{errors.email.value}}">
        {{#if errors.email}}<span class="help-inline">{{errors.email.msg}}</span>{{/if}}
    </div>
  </div>

  <div class="form-group{{#if errors.password}} has-error{{/if}}">
    <div class="controls">
      <input type="password" class="form-control" placeholder="Password" name="password" required>
        {{#if errors.password}}<span class="help-inline">{{errors.password.msg}}</span>{{/if}}
    </div>
  </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
</form>